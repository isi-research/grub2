+/**
+ * @brief reads the input file and calculates the hash
+ *
+ * NOTE: CALLER IS RESPONSIBLE FOR FREEING MEMORY OF THE CONTEXT
+ */
+static grub_err_t hash_image(
+    grub_file_t img_file, 
+    const gcry_md_spec_t* hash, 
+    unsigned char** hash_value,
+    void** context
+    )
+{
+    grub_ssize_t bytes_read;
+    grub_uint8_t* img_buffer = grub_zalloc(IMAGE_BUFFER_SIZE);
+
+    if( !img_buffer )
+    {
+        return grub_error(
+            GRUB_ERR_OUT_OF_MEMORY, 
+            N_("FAILED TO ALLOCATE BUFFER FOR IMG BEING VALIDATED"));  
+    }
+
+    *context = grub_zalloc(hash->contextsize);
+
+    if(! *context )
+    {
+        grub_free(img_buffer);
+
+        return grub_error(
+            GRUB_ERR_OUT_OF_MEMORY, 
+            N_("FAILED TO ALLOCATE MESSAGE DIGEST CONTEXT"));  
+    }
+
+
+    hash->init(*context);
+
+    while(1)
+    {
+        bytes_read = grub_file_read(img_file, img_buffer, IMAGE_BUFFER_SIZE);   
+        if( bytes_read < 0 )
+        {
+            grub_free(img_buffer);
+            return grub_error(GRUB_ERR_FILE_READ_ERROR, N_("ERROR READING IMG FILE"));
+        }
+        else if(0 == bytes_read)
+        {
+            break;
+        }
+        else
+        {
+            hash->write(*context, img_buffer, bytes_read);
+        }
+    }
+
+    hash->final(*context);
+
+    *hash_value = hash->read(*context);
+
+    grub_free(img_buffer);
+
+    return GRUB_ERR_NONE;
+}
