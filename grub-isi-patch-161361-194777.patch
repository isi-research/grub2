+    grub_memcpy (emptr, hash->asnoid, hash->asnlen);
+    emptr += hash->asnlen;
+    grub_memcpy (emptr, hval, hash->mdlen);
+
+    ret = gcry_mpi_scan (hmpi, GCRYMPI_FMT_USG, em, emlen, 0);
