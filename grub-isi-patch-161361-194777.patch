+static grub_err_t grub_isi_crunch_file(grub_file_t file, grub_isi_validate_algo_t algo, grub_uint64_t total_bytes_to_read, grub_uint64_t pad_size, grub_uint16_t *checksum)
+{
+    grub_ssize_t size;
+
+    if(pad_size)
+    {
+        if(total_bytes_to_read % pad_size)
+        {
+            pad_size -= (total_bytes_to_read % pad_size);
+            //grub_printf("need to pad crc w/ %lu bytes\n", pad_size);
+        }
+        else
+        {
+            pad_size = 0;
+        }
+    }
+
+    while( total_bytes_to_read + pad_size )
+    {
+        
+        // read buffer size bytes (fill up the buffer) unless 
+        // I have fewer bytes left to read
+        if(total_bytes_to_read)
+        {
+            size = grub_file_read(file, buffer_,
+                (sizeof(buffer_) < total_bytes_to_read) ? sizeof(buffer_) : total_bytes_to_read );
+
+            total_bytes_to_read -= size;
+        }
+        else
+        {
+            size = pad_size;
+            while(pad_size)
+            {
+                buffer_[--pad_size] = 0;
+
+            }
+        }
+
+        switch(algo)
+        {
+            case GRUB_ISI_VALIDATE_ALGO_CRC16:
+                *checksum = grub_getcrc16(*checksum, buffer_, size);
+                break;
+
+            case GRUB_ISI_VALIDATE_ALGO_BSD:
+            {
+                int i;
+                for( i = 0; i < size; i++ )
+                {
+                    *checksum = (*checksum >> 1) + ((*checksum & 1) << 15);
+                    *checksum += buffer_[i];
+                    *checksum &= 0xffff;    /* Keep it within bounds. */
+                }
+
+                break;
+            }
+
+            default:
+                grub_printf("WARNING: UNRECOGNIZED ALGO TYPE: %d\n", (int)algo);
+                break;
+        }
+    }
+
+    return GRUB_ERR_NONE;
